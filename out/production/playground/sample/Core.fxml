<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>

<GridPane fx:controller="sample.Core"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <stylesheets>
        <URL value="@core.css"/>
    </stylesheets>
    <HBox GridPane.rowIndex="0" GridPane.columnIndex="0" alignment="TOP_LEFT">
        <Button text="open" onAction="#open"/>
        <Button text="Save" onAction="#Save" />
        <Button text="Discard" onAction="#Discard"/>
    </HBox>
    <TextArea fx:id="Input" text="Edit text"
              GridPane.rowIndex="1" GridPane.columnIndex="0" maxWidth="420" minHeight="330"/>
</GridPane>